

<!DOCTYPE html>
<html>
  <head>
    <title>Main Page</title>
    <style>

      body {
            background-image: url('./page/bg.jpg');
            background-color: #1DA1F2;
            background-repeat: no-repeat;
            background-size: cover;
        }
      /* Flex container styles */
      .main-page {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: stretch;
      }
      /* First part styles */
      .function-list {
        flex-basis: 20%;
        display: inline-block;
        width: 50%;
        margin-bottom: 20px;
        color: white;
        font-size: 20px;
        background-color: transparent;
      }
      /* Second part styles */
/* User Posts section */
.user-posts {
  border: 1px solid #ccc;
  margin-top: 20px;
  padding: 10px;
  width: 60%; /* Increase the width to make the white space wider */
  margin: 0 auto; /* Center the container horizontally */
}

/* Post container */
.user-posts > div {
  border-bottom: 1px solid #ccc;
  display: flex;
  flex-direction: column;
  padding: 10px;
}

/* Post title */
.user-posts h2 {
  font-size: 22px;
  font-weight: bold;
  margin: 0;
  padding: 0;
}

/* Post content */
.user-posts p {
  font-size: 18px;
  margin: 0;
  padding: 0;
}

/* Like and Dislike buttons */
.like-button, .dislike-button {
  background-color: transparent;
  border: none;
  color: #fff;
  cursor: pointer;
  font-size: 16px;
  margin-right: 10px;
  padding: 0;
}

.like-button:hover, .dislike-button:hover {
  color: #00acee;
}

/* Comment button */
.comment-button {
  background-color: #00acee;
  border: none;
  color: #fff;
  cursor: pointer;
  font-size: 16px;
  padding: 5px 10px;
}

.comment-button:hover {
  background-color: #0084b4;
}

/* Retweet button */
.retweet-button {
  background-color: transparent;
  border: none;
  color: #999;
  cursor: pointer;
  font-size: 16px;
  margin-right: 10px;
  padding: 0;
}

.retweet-button:hover {
  color: #00acee;
}

/* Comments section */
.comments {
  margin-top: 10px;
  padding: 10px;
  border: 1px solid #ccc;
}

.comments h3 {
  font-size: 18px;
  font-weight: bold;
  margin: 0 0 10px 0;
  padding: 0;
}

.comments p {
  font-size: 16px;
  margin: 0;
  padding: 0;
}
      /* Third part styles */
      .search-users {
        flex-basis: 30%;
        display: inline-block;
        width: 50%;
        margin-bottom: 20px;
        color: white;
        font-size: 20px;
        background-color: transparent;
      }

      img {
  max-width: 400px;
  max-height: 400px;
}

    </style>
  </head>
  <body>

    <div class="main-page">
      <!-- First part: function list -->
      
      <div class="function-list">
        <h1>Welcome, <%= currentUser.username %>!</h1>
        <h2>Function List</h2>
        <ul>
          <li><a href="create">Create a new post</a></li>
          <li><a href="profile">Edit profile</a></li>
          <li><a href="logout">Log out</a></li>
        </ul>
      </div>

      <!-- Second part: user posts -->
      <div class="posts">
        <h2>Posts</h2>
        <% for (const post of posts) { %>
          <div class="post">
            <h3><%= post.title %></h3>
            <p><%= post.username %></p>
            <p><%= post.content %></p>
            <p>Post: <%= post._id %></p> <!-- test id -->
            <% if (post.image) { %>
              <% const base64Data = post.image.toString('base64'); %>
              <img src="data:image/png;base64,<%= base64Data %>" alt="Post image">
            <% } %><br>
            <p>Like Count: <%= post.likecount %></p>
            <button class="like-button" action="/like/<%= post._id %>" data-like-dislike="like">Like</button>
            <button class="dislike-button" action="/dislike/<%= post._id %>" data-like-dislike="dislike">Dislike</button>
            
            <form class="comment-form" action="/comment/<%= post._id %>" method="POST">
              <input type="text" name="comment" placeholder="Add a comment">
              <button type="submit">Submit</button>
            </form>
          </div>
        <% } %>
      </div>
      



<!-- Third part: search users -->
<div class="search-users">
  <h2>Search Users</h2>
  <form method="GET" action="/main">
    <input type="text" placeholder="Search..." name="q">
    <button type="submit">Go</button>
  </form>
  <% if (users && users.length > 0) { %>
    <h2>Search Results:</h2>
    <ul>
      <% users.forEach(function(user) { %>
        <li>
          <%= user.username %>
          <% if (currentUser && currentUser._id && user._id && currentUser._id.toString() !== user._id.toString()) { %>
            <% if (currentUser.following && currentUser.following.includes(user._id)) { %>
              <button disabled>Following</button>
            <% } else { %>
              <form method="POST" action="/follow">
                <input type="hidden" name="userId" value="<%= user._id %>">
                <button type="submit">Follow</button>
              </form>
            <% } %>
          <% } %>
        </li>
      <% }); %>
    </ul>
  <% } else if (query) { %>
    <p>No users found.</p>
  <% } %>
</div>
      


    </div>
  </body>
</html>